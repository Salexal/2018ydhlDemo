<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    tools:context=".thrid.RemoteCar">

    <include layout="@layout/title_mine_car_car"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="600dp">

        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textSize="40sp"
            android:text="远程控制"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp">

                <TextView
                    android:background="@drawable/borders"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:text="小车编号"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout

                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp">

                <TextView
                    android:background="@drawable/borders"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:text="远程控制"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/lst_view_remote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/borders"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:id="@+id/mine_car_balance"
            android:textSize="30sp"
            android:text="我的余额"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:id="@+id/mine_car_remote_control"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="远程控制"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:id="@+id/mine_car_prepaid_record"
            android:textSize="30sp"
            android:text="充值记录"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>