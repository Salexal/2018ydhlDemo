<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.LifeAssistant">

    <include layout="@layout/title_life_ass"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="908dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TextView
            android:layout_marginTop="350dp"
            android:textSize="100sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="19°"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <TextView

                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="今天:12-19°C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart_temperature"
            android:layout_width="0dp"
            android:layout_height="273dp"
            android:layout_gravity="center"
            android:layout_weight="1"></com.github.mikephil.charting.charts.LineChart>
    </LinearLayout>


</LinearLayout>