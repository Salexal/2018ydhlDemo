<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CHARGE.Charge">

    <include layout="@layout/title_charge"/>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45dp"
            android:text="时间:                      "/>

        <TextView
            android:gravity="center"
            android:id="@+id/charge_bg_time"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:text="               开始时间                     " />

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="←→"
            android:textSize="45dp"/>

        <TextView

            android:id="@+id/charge_end_time"
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="                结束时间                    " />
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="40dp"
        android:background="@drawable/bord"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <TextView

            android:background="@drawable/bord"
            android:textSize="30sp"
            android:gravity="center"
            android:text="查询结果"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<View-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:background="#000"></View>-->



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:text="IC卡"
                android:textSize="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:text="车牌号"
                android:textSize="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:text="人员姓名"
                android:textSize="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:text="入场时间"
                android:textSize="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:text="出场时间"
                android:textSize="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:text="收费金额"
                android:textSize="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ListView
            android:id="@+id/park_search_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:gravity="center"
            android:id="@+id/search_park"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   查询   "

            android:textSize="30dp"/>

        <Button
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   退出   "

            android:textSize="30dp"/>

    </LinearLayout>



</LinearLayout>