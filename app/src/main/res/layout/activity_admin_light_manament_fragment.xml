<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/title_sort_car"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:text="排序："
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner_sort_light"
            android:layout_width="365dp"
            android:layout_height="match_parent"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_sort_light"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:text="批量充值" />
        <Button
        android:id="@+id/btn_sort_light_pi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询" />
    </LinearLayout>


    <LinearLayout
        android:background="@drawable/listview_xian"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="路口"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="67dp" />

        <TextView
            android:text="红灯"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="67dp" />

        <TextView
            android:text="黄灯"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="67dp" />
        <TextView
            android:text="绿灯"
            android:gravity="center"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_height="67dp" />
        <TextView
            android:text="操作项"
            android:gravity="center"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_height="67dp" />

        <TextView
            android:text="设置"
            android:gravity="center"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_height="67dp" />

    </LinearLayout>

    <ListView
        android:layout_marginTop="1dp"
        android:background="@drawable/listview_xian"
        android:id="@+id/listView_light_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>