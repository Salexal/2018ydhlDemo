<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.PrepaidRecordsFragment">

    <include layout="@layout/title_prepaid_record"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="175dp"
            android:layout_height="63dp"
            android:gravity="center"

            android:text="账单记录"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/spinner_prepaid_record_sort"
            android:layout_width="488dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="查询"
            android:id="@+id/btn_prepaid_record_sort_query"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/listview_xian"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="序号"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="67dp" />

        <TextView
            android:text="车号"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="67dp" />

        <TextView
            android:text="充值金额（元）"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="67dp" />
        <TextView
            android:text="操作者"
            android:gravity="center"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_height="67dp" />
        <TextView
            android:text="操作时间"
            android:gravity="center"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_height="67dp" />

    </LinearLayout>

    <ListView
        android:layout_marginTop="1dp"
        android:background="@drawable/listview_xian"
        android:id="@+id/listView_prepaid_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>