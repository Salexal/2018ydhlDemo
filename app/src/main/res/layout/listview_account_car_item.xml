<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/account_car_num"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/account_car_img"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/account_car_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxx" />

        <TextView
            android:id="@+id/account_car_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxx" />
    </LinearLayout>

    <TextView
        android:id="@+id/account_car_balance"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <CheckBox
        android:gravity="center"
        android:id="@+id/account_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="BtnA"
        android:layout_marginLeft="10dp"
        android:id="@+id/btn_car_top_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>